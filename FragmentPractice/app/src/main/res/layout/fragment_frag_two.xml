<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".FragTwo"
             android:background="@android:color/holo_green_dark">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="Color 1"
                android:layout_width="match_parent"
                android:layout_height="123dp" android:id="@+id/textView"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Red"
                    android:layout_width="59dp"
                    android:layout_height="match_parent" android:id="@+id/textView2" android:layout_weight="1"/>
            <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sb_red_one" android:layout_weight="1"
                    android:min="0" android:max="255"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Green"
                    android:layout_width="53dp"
                    android:layout_height="match_parent" android:id="@+id/textView3" android:layout_weight="1"/>
            <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sb_green_one" android:layout_weight="1"
                    android:min="0" android:max="255"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="31dp">
            <TextView
                    android:text="Blue"
                    android:layout_width="391dp"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"/>
            <SeekBar
                    android:layout_width="379dp"
                    android:layout_height="wrap_content" android:id="@+id/sb_blue_one" android:layout_weight="1"
                    android:min="0" android:max="255"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>